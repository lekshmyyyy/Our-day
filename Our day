<script>

function checkName(){
    var name=document.getElementById("nameInput").value;
    if(name.toLowerCase()==="adhithya"){
        document.getElementById("entry").style.display="none";
        document.getElementById("mainContent").classList.remove("hidden");
    }else{
        alert("Only my kutta can enter ğŸ’•");
    }
}

var reasons=[
"I love ur smile.",
"I love how safe & comfortable I'm with u.",
"I love u being silly n adorableeeeee.",
"I love ur warmth.",
"I love how u became my home."
];

function showReason(){
    var random=Math.floor(Math.random()*reasons.length);
    document.getElementById("reasonText").innerText=reasons[random];
}

function finalSurprise(){
    document.getElementById("finalScreen").style.display="flex";

    // Start music after button click
    document.getElementById("music").src =
    "https://www.youtube.com/embed/nLnp0tpZ0ok?autoplay=1";
    
    setInterval(createHeart,300);
}

function createHeart(){
    var heart=document.createElement("div");
    heart.className="heart";
    heart.innerText="ğŸ’—";
    heart.style.left=Math.random()*100+"vw";
    document.body.appendChild(heart);
    setTimeout(()=>{heart.remove();},5000);
}

